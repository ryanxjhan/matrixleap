---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
import { t } from "i18next";

const features = [
	{
		title: "Quick Prototyping",
		description: "features.astro",
		icon: "fluent:window-dev-tools-16-filled",
		url: "https://astro.build/",
	},
	{
		title: "Full Stack Development",
		description: "features.alpine",
		icon: "bx:bxs-window-alt",
		url: "https://alpinejs.dev/",
	},
	{
		title: "Deep Tech Integrations",
		description: "features.tailwind",
		icon: "mdi:brain-freeze",
		url: "https://tailwindcss.com/",
	},
	{
		title: "Feature Iterations",
		description: "features.localization",
		icon: "ri:space-ship-fill",
		url: "https://github.com/yassinedoghri/astro-i18next",
	},
	{
		title: "Growth Automation",
		description: "features.light_dark_mode",
		icon: "fluent:arrow-growth-24-filled",
		url: "https://tailwindcss.com/docs/dark-mode",
	},
	{
		title: "Consulting Services",
		description: "features.giscus",
		icon: "fluent:handshake-24-filled",
		url: "https://giscus.app/",
	},
	{
		title: "SEO Optimization",
		description: "features.decapcms",
		icon: "ic:baseline-ads-click",
		url: "https://decapcms.org/",
	},
	{
		title: "Paid Advertising",
		description: "features.rss",

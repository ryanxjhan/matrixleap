changeLanguage("en");

const pricingData = [
	{
		name: "Individual",
		price: "Free",
		popular: false,
		features: ["Free Consultation", "Funding Advices", "Idea Deep Dive"],
		button: {
			text: "Get Started",
		},
	},
	{
		name: "Startup",
		price: {
			monthly: "Equity",
			annual: "$10000",
			discount: "10%",
			original: "$24",
		},
		popular: true,
		features: [
			"Quick Prototyping",
